<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<MenuButton xmlns:fx="http://javafx.com/fxml/1" mnemonicParsing="false" xmlns="http://javafx.com/javafx/8"
            fx:controller="net.sf.latexdraw.instrument.Helper" fx:id="helpMenu">
    <graphic>
        <ImageView>
            <Image url="@/res/emblem-important.png"/>
        </ImageView>
    </graphic>
    <items>
        <MenuItem fx:id="shortcutItem" mnemonicParsing="false" text="%shortcuts">
            <graphic>
                <ImageView>
                    <Image url="@/res/emblem-important.png"/>
                </ImageView>
            </graphic>
        </MenuItem>
        <MenuItem fx:id="donateItem" mnemonicParsing="false" text="%donate">
            <graphic>
                <ImageView>
                    <Image url="@/res/emblem-important.png"/>
                </ImageView>
            </graphic>
        </MenuItem>
        <MenuItem fx:id="manuelItem" mnemonicParsing="false" text="%manual">
            <graphic>
                <ImageView>
                    <Image url="@/res/emblem-important.png"/>
                </ImageView>
            </graphic>
        </MenuItem>
        <MenuItem fx:id="reportBugItem" mnemonicParsing="false" text="%reportBug">
            <graphic>
                <ImageView>
                    <Image url="@/res/emblem-unreadable.png"/>
                </ImageView>
            </graphic>
        </MenuItem>
        <MenuItem fx:id="forumItem" mnemonicParsing="false" text="%forum">
            <graphic>
                <ImageView>
                    <Image url="@/res/emblem-important.png"/>
                </ImageView>
            </graphic>
        </MenuItem>
        <SeparatorMenuItem mnemonicParsing="false"/>
        <MenuItem fx:id="aboutItem" mnemonicParsing="false" text="%about">
            <graphic>
                <ImageView>
                    <Image url="@/res/emblem-important.png"/>
                </ImageView>
            </graphic>
        </MenuItem>
    </items>
</MenuButton>

